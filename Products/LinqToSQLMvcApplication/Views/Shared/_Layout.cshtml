<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <style>
        body {
            display: flex;
            height: 100vh;
/*            overflow: hidden;*/
        }

        #sidebar {
            min-width: 250px;
            max-width: 250px;
            background: #343a40;
            color: #fff;
            transition: all 0.3s;
        }

            #sidebar.active {
                margin-left: -250px;
            }

            #sidebar .sidebar-header {
                padding: 20px;
                background: #343a40;
                display: flex;
                justify-content: space-between;
                align-items: center;
            }

            #sidebar ul.components {
                padding: 20px 0;
            }

            #sidebar ul li a {
                padding: 10px;
                font-size: 1.1em;
                display: block;
                color: #fff;
            }

                #sidebar ul li a:hover {
                    color: #343a40;
                    background: #fff;
                }

            #sidebar ul li .submenu {
                padding-left: 20px;
            }

        #content {
            width: 100%;
            padding: 20px;
            position: relative;
/*            overflow-y: auto;*/
        }

        /*#publisherList {
            max-height: calc(100vh - 150px);*/  /*Adjust the height based on header/footer */
            /*overflow-y: auto;*/  /*Enable vertical scrolling */
        /*}*/

        .navbar {
            padding: 15px 10px;
            background: #fff;
            border: none;
            border-radius: 0;
            margin-bottom: 40px;
            box-shadow: 1px 1px 3px rgba(0, 0, 0, 0.1);
        }

        .navbar-btn {
            box-shadow: none;
            outline: none !important;
            border: none;
        }

        .toggle-btn {
            font-size: 30px;
            cursor: pointer;
            color: #fff;
        }

            .toggle-btn.collapsed {
                display: none;
            }

        #sidebar.active .toggle-btn.collapsed {
            display: block;
        }

        #sidebar.active .toggle-btn:not(.collapsed) {
            display: none;
        }

        #expandBtn {
            position: absolute;
            top: 20px;
            left: 20px;
            display: none;
            color: #000;
        }

        .login-logout {
            position: absolute;
            top: 20px;
            right: 20px;
        }
    </style>
</head>
<body>
    <div id="sidebar" class="bg-dark">
        <div class="sidebar-header">
            <h3>Sidebar</h3>
            <span class="toggle-btn" id="collapseBtn">&gt;</span>
        </div>
        <ul class="list-unstyled components">
            <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
            <li>@Html.ActionLink("Publishers", "Index", "Publisher", new { area = "" }, new { @class = "nav-link" })</li>
            <li>@Html.ActionLink("Books", "Index", "Book", new { area = "" }, new { @class = "nav-link" })</li>
            <li>
                <a href="#submenuExample" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">Menu with Submenu</a>
                <ul class="collapse list-unstyled submenu" id="submenuExample">
                    <li>@Html.ActionLink("Submenu 1", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Submenu 2", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Submenu 3", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                </ul>
            </li>
            <li>@Html.ActionLink("Contact", "Contact", "Home", new { area = "" }, new { @class = "nav-link" })</li>
        </ul>
    </div>

    <div id="content">
        <span class="toggle-btn collapsed" id="expandBtn">&#9776;</span>
        <div class="login-logout">
            @Html.ActionLink("Login", "Login", "Account", new { area = "" }, new { @class = "btn btn-primary" })
            @Html.ActionLink("Logout", "Logout", "Account", new { area = "" }, new { @class = "btn btn-secondary" })
        </div>
        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
            </footer>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script>$(document).ready(function () {
            $('#collapseBtn').on('click', function () {
                $('#sidebar').addClass('active');
                $('#collapseBtn').hide();
                $('#expandBtn').show();
            });

            $('#expandBtn').on('click', function () {
                $('#sidebar').removeClass('active');
                $('#expandBtn').hide();
                $('#collapseBtn').show();
            });

            // Ensure the submenu works
            $('.dropdown-toggle').on('click', function () {
                $(this).next('.collapse').toggleClass('show');
            });
        });</script>
</body>
</html>

