﻿@model IEnumerable<LinqToSQLMvcApplication.Models.PublisherModel>

<table class="table" id="publisherListTable">
    <thead>
        <tr>
            <th>
                @*@Html.ActionLink("Name", "Index", new { sortOrder = ViewBag.NameSortParm })*@
                <a href="" class="sort-link">Name</a>
            </th>
            <th>
                @*@Html.ActionLink("Year", "Index", new { sortOrder = ViewBag.YearSortParm })*@
                <a href="" class="sort-link">Year</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Year)</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    <button class="deleteButton" data-id="@item.Id">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>